---
import type { Category } from '../data/categories';

interface Props {
  title?: string;
  categories: Category[];
}

const { categories, title = 'Categorias destacadas' } = Astro.props;
---
<section class="w-full bg-[color:var(--surface)] py-12">
  <div class="mx-auto flex w-full max-w-6xl flex-col gap-6 px-4">
    <div class="flex flex-wrap items-end justify-between gap-4">
      <div>
        <p class="text-xs font-semibold uppercase tracking-[0.4em] text-[color:var(--accent)]">Catalogo Abril</p>
        <h2 class="text-2xl font-semibold text-[color:var(--text)] sm:text-3xl">{title}</h2>
      </div>
      <div class="hidden gap-2 md:flex">
        <span class="rounded-full bg-[color:var(--surface-muted)] px-3 py-1 text-xs font-semibold text-[color:var(--brand)]">
          Scroll horizontal
        </span>
        <span class="rounded-full bg-[color:var(--surface-muted)] px-3 py-1 text-xs font-semibold text-[color:var(--brand)]">
          5 lineas exclusivas
        </span>
      </div>
    </div>
    <div class="no-scrollbar -mx-4 flex gap-6 overflow-x-auto px-4 pb-2 pt-4" style="scroll-snap-type: x mandatory;">
      {categories.map((category) => (
        <article
          class="min-w-[240px] scroll-ml-4 snap-center rounded-3xl border border-[color:var(--surface-muted)] bg-[color:var(--surface)] shadow-xl transition hover:-translate-y-1 hover:shadow-2xl"
        >
          <div class="relative aspect-[4/3] w-full overflow-hidden rounded-t-3xl">
            <img src={category.image} alt={`Categoria ${category.name}`} class="h-full w-full object-cover" loading="lazy" />
            <span class="absolute left-3 top-3 rounded-full bg-white/85 px-3 py-1 text-xs font-semibold text-[color:var(--brand)]">
              {category.name}
            </span>
          </div>
          <div class="space-y-3 px-5 py-4">
            <p class="text-sm text-[color:var(--text-muted)]">{category.description}</p>
            <a class="inline-flex items-center gap-2 text-sm font-semibold text-[color:var(--brand)]" href={`/productos?categoria=${category.id}`}>
              Ver mas
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 12h14M13 6l6 6-6 6" />
              </svg>
            </a>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>
