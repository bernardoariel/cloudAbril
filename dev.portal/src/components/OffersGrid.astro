---
import type { Offer } from '../data/offers';

interface Props {
  offers: Offer[];
}

const { offers } = Astro.props;
---
<section id="ofertas" class="bg-[color:var(--surface-muted)]/60 py-14">
  <div class="mx-auto w-full max-w-6xl px-4">
    <div class="flex flex-col gap-8 rounded-4xl bg-[color:var(--surface)] p-8 shadow-2xl shadow-[rgba(20,0,44,0.08)] sm:p-12">
      <div class="flex flex-wrap items-end justify-between gap-4">
        <div>
          <p class="text-xs font-semibold uppercase tracking-[0.4em] text-[color:var(--accent)]">Ofertas del mes</p>
          <h2 class="text-3xl font-semibold text-[color:var(--text)]">Beneficios exclusivos Abril</h2>
        </div>
        <a class="text-sm font-semibold text-[color:var(--brand)]" href="/productos">Ver todas las promos</a>
      </div>
      <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
        {offers.map((offer, index) => (
          <article class="card-surface relative overflow-hidden rounded-3xl border border-[color:var(--surface-muted)] px-5 py-6">
            <span class="absolute right-5 top-5 text-4xl font-black text-[color:var(--accent)]/20">{String(index + 1).padStart(2, '0')}</span>
            <p class="relative text-lg font-semibold text-[color:var(--text)]">{offer}</p>
            <p class="mt-3 text-sm text-[color:var(--text-muted)]">
              Disponible en sucursal y tienda online durante todo el mes o hasta agotar stock.
            </p>
          </article>
        ))}
      </div>
    </div>
  </div>
</section>
