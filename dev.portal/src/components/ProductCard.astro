---
const { product } = Astro.props;
---
<div class="bg-white border border-gray-200 rounded-lg overflow-hidden hover:shadow-md transition-shadow">
  <img src={product.img} alt={product.name} class="w-full h-48 object-cover" />
  <div class="p-4">
    <h3 class="font-semibold text-gray-900 mb-2">{product.name}</h3>
    <div class="flex items-baseline gap-2 mb-3">
      {product.listPrice && (
        <span class="text-sm text-gray-400 line-through">
          ${product.listPrice.toLocaleString('es-AR')}
        </span>
      )}
      <span class="text-lg font-bold text-[var(--brand)]">
        ${product.price.toLocaleString('es-AR')}
      </span>
    </div>
    <button class="w-full py-2 bg-[var(--brand)] text-white rounded-md font-medium hover:bg-[var(--accent)] transition-colors">
      Comprar
    </button>
  </div>
</div>
