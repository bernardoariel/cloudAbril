---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { formatCurrency } from '../../../lib/format';
import type { Product } from '../../../data/products';
import { products } from '../../../data/products';

export function getStaticPaths() {
  return products.map((product) => ({
    params: { slug: product.slug },
    props: { product }
  }));
}

const { product } = Astro.props as { product: Product };
const title = `${product.name} | Abril Amoblamientos`;
---
<BaseLayout title={title} description={product.description}>
  <section class="bg-[color:var(--surface)] pb-20 pt-12">
    <div class="mx-auto flex w-full max-w-6xl flex-col gap-8 px-4 lg:flex-row">
      <div class="flex-1">
        <div class="relative overflow-hidden rounded-4xl border border-[color:var(--surface-muted)] bg-[color:var(--surface-muted)]">
          <img src={product.image} alt={product.name} class="h-full w-full object-cover" />
          <span class="absolute right-4 top-4 rounded-full bg-black/40 px-3 py-1 text-xs font-semibold uppercase text-white">
            {product.category}
          </span>
        </div>
      </div>
      <div class="flex-1 space-y-6">
        <div class="space-y-3">
          <p class="text-xs font-semibold uppercase tracking-[0.4em] text-[color:var(--accent)]">Linea {product.category}</p>
          <h1 class="text-3xl font-semibold text-[color:var(--text)]">{product.name}</h1>
          <p class="text-sm text-[color:var(--text-muted)]">{product.description}</p>
        </div>
        <div class="flex flex-wrap items-end gap-4 border-y border-[color:var(--surface-muted)] py-6">
          <span class="text-3xl font-semibold text-[color:var(--brand)]">{formatCurrency(product.price)}</span>
          <span class="text-sm text-[color:var(--text-muted)] line-through">{formatCurrency(product.listPrice)}</span>
          <span class="rounded-full bg-[color:var(--accent-muted)] px-4 py-2 text-xs font-semibold uppercase text-[color:var(--brand)]">
            {product.promo}
          </span>
        </div>
        <div class="grid gap-4 sm:grid-cols-2">
          <div class="rounded-3xl border border-[color:var(--surface-muted)] bg-[color:var(--surface)] p-5">
            <h2 class="text-sm font-semibold uppercase tracking-[0.2em] text-[color:var(--text)]">Materiales</h2>
            <ul class="mt-3 space-y-2 text-sm text-[color:var(--text-muted)]">
              {product.materials.map((material) => (
                <li>- {material}</li>
              ))}
            </ul>
          </div>
          <div class="rounded-3xl border border-[color:var(--surface-muted)] bg-[color:var(--surface)] p-5">
            <h2 class="text-sm font-semibold uppercase tracking-[0.2em] text-[color:var(--text)]">Medidas</h2>
            <p class="mt-3 text-sm text-[color:var(--text-muted)]">
              Ancho {product.dimensions.width} cm | Profundidad {product.dimensions.depth} cm | Alto {product.dimensions.height} cm
            </p>
            <h3 class="mt-4 text-sm font-semibold uppercase tracking-[0.2em] text-[color:var(--text)]">Colores disponibles</h3>
            <div class="mt-3 flex flex-wrap gap-2">
              {product.availableColors.map((color) => (
                <span class="rounded-full border border-[color:var(--surface-muted)] px-3 py-1 text-xs font-semibold text-[color:var(--brand)]">
                  {color}
                </span>
              ))}
            </div>
          </div>
        </div>
        <div class="flex flex-col gap-4 rounded-3xl border border-[color:var(--surface-muted)] bg-[color:var(--background)] p-6">
          <p class="text-sm text-[color:var(--text-muted)]">
            Producto disponible para retiro en deposito y envio coordinado. Consultanos por tapizados y combinaciones especiales.
          </p>
          <div class="flex flex-wrap gap-3">
            <button
              class="button-ring inline-flex items-center justify-center gap-2 rounded-full bg-[color:var(--brand)] px-6 py-3 text-sm font-semibold uppercase tracking-wide text-white shadow-lg hover:bg-[color:var(--accent)]"
              type="button"
              data-slug={product.slug}
            >
              Agregar al carrito (mock)
            </button>
            <a class="inline-flex items-center gap-2 text-sm font-semibold text-[color:var(--brand)]" href={`mailto:hola@abrilamoblamientos.com.ar?subject=Consulta%20${product.slug}`}>
              Consultar asesor
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l8.89 5.34a2 2 0 002.22 0L23 8" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<script is:inline define:vars={{ product }}>
  import { addToCart } from '../../../lib/cart';

  const button = document.querySelector('[data-slug="' + product.slug + '"]') as HTMLButtonElement | null;

  if (button) {
    button.addEventListener('click', () => {
      addToCart(product);
      button.textContent = 'Agregado al carrito';
      button.disabled = true;
      setTimeout(() => {
        button.textContent = 'Agregar al carrito (mock)';
        button.disabled = false;
      }, 2400);
    });
  }
</script>
